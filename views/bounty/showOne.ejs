

<h1><%= bounty.title %></h1>
<h1><img src="<%= bounty.images[0].original %>"></h1>
<h1><%= bounty.location %></h1>
<h1><%= bounty.description %></h1>
<h1><%= bounty.weight_min %></h1>
<h1><%= bounty.reward_text %></h1>
<h1><%= bounty.uid %></h1>




    <form action="/bounty/bounty/<%= bounty.uid %>" method="POST">
        <input hidden type="string" name="uId" value="<%= bounty.uid %>">
        <input type="submit" value="save this bounty">
    </form>
    
    <h3>
        <% comments.forEach(comment =>{ %>
        <li>
            <%=comment.comment%>
            <form action="/bounty/<%= comment.id %>?_method=DELETE" method="POST">
                <input type="submit" value="delete">
            </form>
            <form action="/bounty/<%= comment.id %>?_method=PUT" method="POST">
                <input type="text" name="comment" value="<%= comment.comment %>">
                <input type="submit" value="edit" name="" id="">
            </form>
        </li>
        <% }) %>
    </ul>
    <form action="/bounty/addcomment" method="POST">
        <input type="hidden" name="apiId" value="<%= bounty.uid %>">
        <input type="text" name="comment">
        <input type="submit">
    </form>